//idea was to cycle the sameish data through successive 
//	layers of functions, in order to compute length 
//	before ouptputting the whole thing
typedef struct	s_possibly_allocated {
	int		*is_alloc;
	void	*data;
}				t_s_pa;

typedef struct	convert_s_chunk t_s_cc;
typedef int		(*cc_fun)(t_s_pct *p_chk, t_s_cc *p_owner);
struct			convert_s_chunk {
	size_t	len;
	t_s_pa	*output_data;
	cc_fun	compute_len;
	cc_fun	output_stuff;
};
	
#endif
